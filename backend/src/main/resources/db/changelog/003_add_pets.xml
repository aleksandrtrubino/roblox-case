<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0031" author="aleksandrtrubino">
        <createTable tableName="pet_rarity">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="0032" author="aleksandrtrubino">
        <createSequence sequenceName="pets_seq" startValue="1000" incrementBy="50"/>
    </changeSet>

    <changeSet id="0033" author="aleksandrtrubino">
        <createTable tableName="pets">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="rarity_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0034" author="aleksandrtrubino">
        <addForeignKeyConstraint
                baseTableName="pets"
                baseColumnNames="rarity_id"
                constraintName="fk_pets_rarity_id"
                referencedTableName="pet_rarity"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="RESTRICT"/>
    </changeSet>
    
    <changeSet id="0035" author="aleksandrtrubino">
        <insert tableName="pet_rarity">
            <column name="id" value="1"/>
            <column name="name" value="common"/>
        </insert>
        <insert tableName="pet_rarity">
            <column name="id" value="2"/>
            <column name="name" value="uncommon"/>
        </insert>
        <insert tableName="pet_rarity">
            <column name="id" value="3"/>
            <column name="name" value="rare"/>
        </insert>
        <insert tableName="pet_rarity">
            <column name="id" value="4"/>
            <column name="name" value="ultra-rare"/>
        </insert>
        <insert tableName="pet_rarity">
            <column name="id" value="5"/>
            <column name="name" value="legendary"/>
        </insert>
    </changeSet>

</databaseChangeLog>
