<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0051" author="aleksandrtrubino">
        <createSequence sequenceName="boxes" startValue="1000" incrementBy="50"/>
    </changeSet>

    <changeSet id="0052" author="aleksandrtrubino">
        <createTable tableName="boxcases">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="price" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0053" author="aleksandrtrubino">
        <createTable tableName="boxcases_pet_cards">
            <column name="boxcase_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="pet_card_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="percent" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>